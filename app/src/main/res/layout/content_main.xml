<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity"
    android:foreground="#1c24242a"
    android:background="#000000">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/speaker"
        android:scaleType="centerCrop"
        android:id="@+id/player" />

    <TextView android:text="now playing..." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#c5e6ea" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/bPlay"
        android:onClick="playIt"
        android:layout_marginBottom="95dp"
        android:layout_alignBottom="@+id/player"
        android:layout_alignRight="@+id/bSongs"
        android:layout_alignEnd="@+id/bSongs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/pause_button"
        android:onClick="pauseIt"
        android:layout_alignTop="@+id/bPlay"
        android:layout_toLeftOf="@+id/bSongs"
        android:layout_toStartOf="@+id/bSongs" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song List"
        android:id="@+id/bSongs"
        android:onClick="songList"
        android:layout_alignBottom="@+id/player"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/bSkip"
        android:layout_alignTop="@+id/bPlay"
        android:layout_toRightOf="@+id/bSongs"
        android:layout_toEndOf="@+id/bSongs"
        android:onClick="nextIt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="no songs in playlist yet.. please add to queue.."
        android:id="@+id/needSongs"
        android:textColor="#3b517c"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_margin="25dp"/>

</RelativeLayout>
