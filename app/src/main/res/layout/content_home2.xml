<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_home2" tools:context="com.juke.kynasaur.juke2.Home"
    android:background="#121212">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/vinyl_records2"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"
        android:background="#464648" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="JukeBox DJ"
        android:id="@+id/textView4"
        android:textColor="#a1a1a2"
        android:textStyle="bold"
        android:textSize="@android:dimen/app_icon_size"
        android:typeface="serif"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:text="Make a Request"
        android:textColor="#FFFFFF"
        android:background="#7a7d81"
        android:layout_above="@+id/player"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:onClick="search" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop that Beat"
        android:id="@+id/player"
        android:onClick="player"
        android:background="#7a7d81"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="94dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="love your music like Kanye loves Kanye."
        android:id="@+id/textView"
        android:textColor="#393d40"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
